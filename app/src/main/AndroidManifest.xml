<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.riteish.mtracker" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".serviceStatus"
            android:label="@string/title_activity_service_status" >
        </activity>
        <activity
            android:name=".serviceExtra"
            android:label="@string/title_activity_service_extra" >
        </activity>
        <activity
            android:name=".liveTracker"
            android:label="@string/title_activity_live_tracker" >
        </activity>
        <activity
            android:name=".directions"
            android:label="@string/title_activity_directions" >
        </activity>
        <activity
            android:name=".mapZoom"
            android:label="@string/title_activity_map_zoom" >
        </activity>
        <activity
            android:name=".directionList"
            android:label="@string/title_activity_direction_list" >
        </activity>
        <activity
            android:name=".directionExtra"
            android:label="@string/title_activity_direction_extra" >
        </activity>
    </application>

</manifest>
